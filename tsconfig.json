{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "jsx": "react-jsx",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    // to spare us from writing 'import * as React from "react"'
    "allowSyntheticDefaultImports": true,
    // to handle variable containing errors since we don't know their type beforehand
    "useUnknownInCatchVariables": false
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}